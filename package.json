{
    "name": "deep-wiki",
    "displayName": "Deep Wiki",
    "description": "The Agentic Wiki For Your Git Codebase",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "deep-wiki.config",
                "title": "Deep Wiki: Config"
            },
            {
                "command": "deep-wiki.generate",
                "title": "Deep Wiki: Generate"
            },
            {
                "command": "deep-wiki.open",
                "title": "Deep Wiki: Open"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "lint:fix": "eslint --fix src",
        "test": "vscode-test",
        "format": "prettier --write . src"
    },
    "devDependencies": {
        "@types/debug": "^4.1.12",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.99.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "pretty-quick": "^4.1.1",
        "simple-git-hooks": "^2.13.0",
        "typescript": "^5.8.2"
    },
    "simple-git-hooks": {
        "pre-commit": "pretty-quick --staged"
    },
    "dependencies": {
        "debug": "^4.4.0",
        "ignore": "^7.0.4",
        "minimatch": "^10.0.1",
        "openai": "^4.96.2",
        "pocketflow": "^1.0.4",
        "yaml": "^2.7.1"
    }
}
